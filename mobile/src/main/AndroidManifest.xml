<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bfemmer.portdawgtoolkit">

    <!-- Required to act as a custom watch face. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CBCalculatorActivity"
            android:label="@string/title_activity_cbcalculator"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bfemmer.portdawgtoolkit.MainActivity" />
        </activity>
        <activity
            android:name=".PalletModuleActivity"
            android:label="@string/title_activity_pallet_module"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bfemmer.portdawgtoolkit.MainActivity" />
        </activity>
        <activity
            android:name=".BulletTrackerActivity"
            android:label="@string/title_activity_bullet_tracker"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bfemmer.portdawgtoolkit.MainActivity" />
        </activity>
        <activity
            android:name=".DateCodeActivity"
            android:label="@string/title_activity_date_code"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bfemmer.portdawgtoolkit.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bfemmer.portdawgtoolkit.MainActivity" />
        </activity>
        <activity
            android:name=".ReadinessActivity"
            android:label="@string/title_activity_readiness"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bfemmer.portdawgtoolkit.MainActivity" />
        </activity>
    </application>

</manifest>